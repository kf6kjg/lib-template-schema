{
	"include": ["scripts/**", "src/**"],
	"exclude": [
		"**/*.test.ts",
		"**/*.test.tsx",
		"dist",
		"src/test",
		"src/cli.ts",
		"src/migrations",
		"**/preparedsequelize.ts"
	],

	"branches": 80,
	"functions": 80,
	"lines": 80,
	"statements": 80,

	"watermarks": {
		"branches": [80, 95],
		"functions": [80, 95],
		"lines": [80, 95],
		"statements": [80, 95]
	},

	"all": true,
	"check-coverage": true,
	"skip-empty": true,
	"skip-full": true,

	"extension": [".ts", ".tsx"]
}
